            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCSxubGd-_rlOJeeBfvuSSSFPj8b5aTvcQ" />

        <!-- 구글맵 사용할 화면 액티비티 추가 -->
        <activity
